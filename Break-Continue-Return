package com.demo.intro;

class FirstPrgram {

	public static void main(String[] args) {

		for(int i=1;i<=10;i++) {
			
			if(i==5 || i==7)
				//Stop the itertion or comes out of the loop
				break;
			else
			System.out.println(i);	
		}
		
		System.out.println("Hi");

	}

}


for (int i = 1; i <= 10; i++) {
			System.out.println("Hello world");
			for (int j = 1; j <= 10; j++) {
				System.out.println("Bye ");
				break;
			}
		}
		System.out.println("Hi");


int i = 1       i <= 10         i++                      Hello World
